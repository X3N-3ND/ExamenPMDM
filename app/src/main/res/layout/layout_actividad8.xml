<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    style="@style/TemaLayout"
    android:id="@+id/act8_relativelayout"
    android:paddingTop="20dp"
    android:paddingLeft="30dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act8_textview_posx"
        style="@style/TemaTexto"
        android:layout_above="@+id/act8_textview_posy"
        android:layout_alignParentLeft="true" />

    <TextView
        style="@style/TemaTexto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act8_textview_posy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/TemaTexto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act8_textview_restx"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/act8_textview_posx"
        android:layout_alignParentLeft="true" />

    <TextView
        style="@style/TemaTexto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act8_textview_resty"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/act8_textview_restx"
        android:layout_alignParentLeft="true" />

</RelativeLayout>